doctype html

head
	title Add a new book
body
	include admin_head.pug
	h3 Add a new book
	h4 #{prompt}
	div.addPublisher
		form(action="/addBook" method="POST")
			div
				input(type="text" name="title" placeholder=" Title")
			div
				input(type="text" name="ISBN" placeholder=" ISBN")
			div
				input(type="text" name="author" placeholder=" Author")
			div
				input(type="text" name="genre" placeholder=" Genre")
			div
				input(type="text" name="price" placeholder=" Price")
			div
				input(type="text" name="pageCount" placeholder=" Page Count")
			div
				input(type="text" name="publicationDate" placeholder=" Publication Date")
			div
				input(type="text" name="quantity" placeholder=" Quantity")
			div
				input(type="text" name="publisherName" placeholder=" Publisher Name")
			div
				input(type="text" name="paymentPercent" placeholder=" Payment Percent (%)")
			button(type="submit") Add Book